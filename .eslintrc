{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "global-require": "off",
    "spaced-comment": "off",
    "no-use-before-define": [
      "error",
      {
        "variables": false
      }
    ],
    "no-unused-expressions": [
      "error",
      {
        "allowShortCircuit": true
      }
    ],
    "react/jsx-filename-extension": "off",
    "react/no-array-index-key": "off",
    "react/jsx-fragments": [
      "error",
      "element"
    ],
    "react/jsx-props-no-spreading": [
      "error",
      {
        "html": "enforce",
        "custom": "ignore",
        "explicitSpread": "ignore",
        "exceptions": [
          "img"
        ]
      }
    ],
    "react/prop-types": [
      "error",
      {
        "ignore": [
          "children",
          "navigation",
          "route",
          "placeholderStyle"
        ]
      }
    ],
    "react/forbid-prop-types": [
      "error",
      {
        "forbid": [
          "any"
        ]
      }
    ]
  }
}
